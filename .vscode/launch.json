{
    // 使用 IntelliSense 了解相关属性。
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(GDB) Launch", //配置名称，在启动配置下拉菜单中显示
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "x64",
            "program": "${command:cmake.launchTargetPath}", //将要进行调试的程序路径
            "args": [],
            "stopAtEntry": false, //设为ture时程序将暂停在程序入口处
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true, //调试时是否显示控制台
            "MIMode": "gdb",
            "miDebuggerPath": "D:/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "cmake build active file"
        }
    ]
}